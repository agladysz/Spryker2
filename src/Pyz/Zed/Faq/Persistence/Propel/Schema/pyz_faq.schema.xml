<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\Faq\Persistence"
          package="src.Orm.Zed.Faq.Persistence">
    <table name="pyz_faq" phpName="PyzFaq">
        <column name="id_faq" required="true" type="INTEGER" autoIncrement="true" primaryKey="true"/>
        <column name="question" required="true" type="VARCHAR" size="255"/>
        <column name="answer" required="true" type="VARCHAR" size="255"/>
        <column name="activated" type="BOOLEAN" defaultValue="true"/>
        <column name="votes_counter" type="INTEGER" autoIncrement="false" defaultValue="0"/>
    </table>

</database>
